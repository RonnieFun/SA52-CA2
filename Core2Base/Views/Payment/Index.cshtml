@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "/Views/Shared/_PaymentPageLayout.cshtml";
}

<style>

    html {
        position: relative;
        min-height: 100%;
    }

    body {
        font-family: Arial;
        font-size: 17px;
        padding: 8px;
        margin-bottom: 170px;
    }

    footer {
        bottom: 0px;
    }

    * {
        box-sizing: border-box;
    }

    .row {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin: 0-10px;
    }

    div.container {
        background-color: #cfcccc85;
        padding: 20px;
        border: 1px solid lightgrey;
        border-radius: 3px;
        height: 450px;
        width: 500px;
        margin-left: 180px;
    }

    div.container-lg {
        background-color: #cfcccc85;
        padding: 20px;
        border: 1px solid lightgrey;
        border-radius: 3px;
        height: 450px;
        width: 700px;
        margin-right: 122px;
    }

    input[type="text"] {
        width: 100%;
        padding: 5px;
        border: 2px solid lightgrey;
    }

    input[type="tel"] {
        width: 100%;
        padding: 5px;
        border: 2px solid lightgrey;
    }

    .col-25 {
        -ms-flex: 25%;
        flex: 25%
    }

    .col-50 {
        -ms-flex: 50%;
        flex: 50%
    }

    .col-75 {
        -ms-flex: 75%;
        flex: 75%
    }

    label {
        margin-bottom: 10px;
        display: block;
    }

        #divleft {
            width:40%;
            float:left;
        }

    #divright {
        width: 60%;
        float: left;
    }
 
</style>

<body>
    <form id="form" action="/Payment/Success" method="POST">

        
        <div id="divleft">
            <div class="row">
                <div class="container">
                    <h5><b>Payment</b></h5>
                    <h6>We accept the following credit cards:</h6>
                    <div class="icon-container">
                        <i class="fab fa-cc-visa fa-2x" style="color:midnightblue;"></i>
                        <i class="fab fa-cc-mastercard fa-2x" style="color:red;"></i>
                        <i class="fab fa-cc-amex fa-2x" style="color:dodgerblue;"></i>
                        <i class="fab fa-cc-jcb fa-2x" style="color:black;"></i>
                        <i class="fab fa-cc-paypal fa-2x" style="color:lightskyblue;"></i>
                    </div>
                    <p>

                    </p>
                    <label for="ccname">Name on Card</label>
                    <p>
                        <input type="text" id="ccname" name="cardname" placeholder="John/Jane Doe">
                    </p>

                    <label for="ccnumber">Credit Card Number</label>
                    <p>
                        <input type="text" id="ccnumber" name="cardnumber" placeholder="1111-2222-3333-4444">
                    </p>
                    <div class="row">
                        <div class="col-25">
                                <label for="expmonth">Exp Month</label>
                                <p>
                                    <input type="text" id="expmonth" name="expmonth" placeholder="January">
                                </p>
                            </div>

                            <div class="col-25">
                                <label for="expyear">Exp Year</label>
                                <p>
                                    <input type="text" id="expyear" name="expyear" placeholder="2023">
                                </p>
                            </div>
                            <div class="col-25">
                                <label for="cvv">CVV</label>
                                <p>
                                    <input type="text" id="cvv" name="cvv" placeholder="219">
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        <div class="row">
            <div class="divright">
                <div class="container-lg">
                    <div class="col-50">
                        <h5><b>Billing Information</b></h5>
                        <label for="firstname">First Name</label>
                        <p>
                            <input type="text" id="firstname" name="firstname" placeholder="John/Jane">
                        </p>
                        <label for="lastname">Last Name</label>
                        <p>
                            <input type="text" id="lastname" name="lastname" placeholder="Doe">
                        </p>
                        <div class="row">
                            <div class="col-25">
                                <label for="contact">Contact Number</label>
                                <p>
                                    <input type="tel" id="contact" name="address" placeholder="+16467980487">
                                </p>
                            </div>
                                <div class="col-75">
                                    <label for="address">Address</label>
                                    <p>
                                        <input type="text" id="address" name="address" placeholder="Canberra Street 32">
                                    </p>
                                </div>
                            </div>

                                <div class="row">
                                    <div class="col-25">
                                        <label for="country">Country</label>
                                        <p>
                                            <input type="text" id="country" name="country" placeholder="United States">
                                        </p>
                                    </div>
                                    <div class="col-25">
                                        <label for="zip">Zip Code</label>
                                        <input type="text" id="zip" name="zip" placeholder="11102">
                                    </div>
                                    <div class="col-25">
                                        <label for="state">State</label>
                                        <input type="text" id="state" name="state" placeholder="New York">
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
        </div>

        <hr>

        <p align="right" style="margin-right:3.8em;"><a>Grand Total: $10000</a></p>

        <p align="right" style="margin-right:2.5em;"><button type="submit" class="btn-primary" href="/Home/Login">Proceed to Purchase</button></p>
    </form>
</body>

<footer class="border-top footer text-muted bg-light">
    <div class="footer_container">
        &copy; 2021 - ProGamer Computing
        <a class="contactUs" href="/">Contact Us</a>
    </div>
</footer>




