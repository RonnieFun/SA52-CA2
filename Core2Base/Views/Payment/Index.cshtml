@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "/Views/Shared/_PaymentPageLayout.cshtml";
}

<style>

    html {
        position: relative;
        min-height: 100%;
    }

    body {
        font-family: Arial;
        font-size: 17px;
        padding: 8px;
        margin-bottom: 170px;
    }

    footer {
        bottom: 0px;
    }

    * {
        box-sizing: border-box;
    }

    .row {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin: 0-10px;
    }

    div.container {
        background-color: #cfcccc85;
        padding: 20px;
        border: 1px solid lightgrey;
        border-radius: 3px;
        height: 450px;
        width: 650px;
    }

    div.container-lg {
        background-color: #cfcccc85;
        padding: 20px;
        border: 1px solid lightgrey;
        border-radius: 3px;
        height: 450px;
        width: -1000px;
    }

    input[type="text"] {
        width: 100%;
        padding: 5px;
        border: 2px solid lightgrey;
    }

    .col-25 {
        -ms-flex: 25%;
        flex: 25%
    }

    .col-50 {
        -ms-flex: 50%;
        flex: 50%
    }

    .col-75 {
        -ms-flex: 75%;
        flex: 75%
    }

    label {
        margin-bottom: 10px;
        display: block;
    }

    .split {
        position: relative;
        width: 50%;
        height: 100%;
        overflow: hidden;
        display: block;
    }

        .split.left {
            left: 0px;
        }

        .split.right {
            right: 50px;
        }

    .btn-dark {
        width: 500px;
    }
</style>

<body>
    <form id="form" action="/Payment/Success" method="POST">

        <div class="row">
            <div class="split left">
                <div class="container">
                    <h5><b>Payment</b></h5>
                    <h6>We accept the following credit cards:</h6>
                    <div class="icon-container">
                        <i class="fab fa-cc-visa fa-2x" style="color:midnightblue;"></i>
                        <i class="fab fa-cc-mastercard fa-2x" style="color:red;"></i>
                        <i class="fab fa-cc-amex fa-2x" style="color:dodgerblue;"></i>
                        <i class="fab fa-cc-jcb fa-2x" style="color:black;"></i>
                        <i class="fab fa-cc-paypal fa-2x" style="color:lightskyblue;"></i>
                    </div>


                    <label for="ccname">Name on Card</label>
                    <p>
                        <input type="text" id="ccname" name="cardname" placeholder="John/Jane Doe">
                    </p>

                    <label for="ccnumber">Credit Card Number</label>
                    <p>
                        <input type="text" id="ccnumber" name="cardnumber" placeholder="1111-2222-3333-4444">
                    </p>

                    <div class="row">
                        <div class="col-25">
                            <label for="expmonth">Exp Month</label>
                            <p>
                                <input type="text" id="expmonth" name="expmonth" placeholder="January">
                            </p>
                        </div>

                        <div class="col-25">
                            <label for="expyear">Exp Year</label>
                            <p>
                                <input type="text" id="expyear" name="expyear" placeholder="2023">
                            </p>
                        </div>
                        <div class="col-25">
                            <label for="cvv">CVV</label>
                            <p>
                                <input type="text" id="cvv" name="cvv" placeholder="219">
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="split right">
                <div class="container-lg">
                    <div class="col-50">
                        <h5><b>Billing Information</b></h5>
                        <label for="firstname">First Name</label>
                        <input type="text" id="firstname" name="firstname" placeholder="John/Jane">
                        <label for="lastname">Last Name</label>
                        <input type="text" id="lastname" name="lastname" placeholder="Doe">
                        <label for="lastname">Address</label>
                        <input type="text" id="lastname" name="lastname" placeholder="My Addess">
                        <div class="row">
                            <div class="col-25">
                                <label for="contactno">Contact Number</label>
                                <input type="tel" id="contactno" name="contact" placeholder="67895432">
                            </div>
                            <div class="col-25">
                                <label for="zip">Zip Code</label>
                                <input type="text" id="zip" name="zip" placeholder="309827">
                            </div>
                            <div class="col-25">
                                <label for="state">State</label>
                                <input type="text" id="state" name="state" placeholder="New York">
                            </div>
                        </div>
                        <label for="country">Country</label>
                        <input type="text" id="country" name="country" placeholder="United States">
                    </div>
                </div>
            </div>
        </div>

        <hr>

        <p align="right"><a align="right">Grand Total: $10000</a></p>

        <p align="right"><button type="submit" class="btn btn-secondary" href="/Home/Login">Proceed to Purchase</button></p>
    </form>
</body>

<footer class="border-top footer text-muted bg-light">
    <div class="footer_container">
        &copy; 2021 - ProGamer Computing
        <a class="contactUs" href="/">Contact Us</a>
    </div>
</footer>




