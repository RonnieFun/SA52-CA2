
@{
    ViewData["Title"] = "HomePage";
    Layout = "_Layout_HomeIndex";
}


<!-- The following codes are to show the product list-->
<!-- The ViewData["Products"] key-value pair is temporarily used to get data frm ProductController-->

@{
    var Products = (List<Product>)ViewData["Products"];
}
<div class="container d-flex flex-wrap ">

    @foreach (var product in Products)
    {
        <div class="card">
            <img src="@product.Image" class="card-img-top" alt="@product.Name &nbsp @product.Description" width="150" height="200">
          
            <div class="card-body d-grid">
                <h5 class="card-title">@product.Name</h5>
                <h5 class="card-title">@Html.DisplayFor(p => product.UnitPrice)</h5>
                <p class="card-text">@product.Description</p>
                <button id="@product.Id" type="button" class="mt-auto col-addCart btn btn-primary add-to-cart">Add to Cart</button>
            </div>
        </div>
    }
</div>