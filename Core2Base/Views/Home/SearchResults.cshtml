@{
    var foundProducts = (List<Product>)ViewData["foundProducts"];

}

<div class="container d-flex flex-wrap id=" ProductList"">

    @foreach (var product in foundProducts)
    {
        <div class="card">
            <img src="@product.Image" class="card-img-top" alt="..." width="150" height="200">
            <div class="card-body">
                <h5 class="card-title" name="product">@product.ProductName</h5>
                <h5 class="card-title">@Html.DisplayFor(p => product.UnitPrice)</h5>
                <p class="card-text">@product.Description</p>
                <button type="button" class=" btn btn-primary add-to-cart">Add to Cart</button>
            </div>
        </div>
    }
</div>