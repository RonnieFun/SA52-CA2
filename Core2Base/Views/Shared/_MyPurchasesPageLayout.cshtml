<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Team 2 CA Project</title>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<!-- HEADER START -->
<header class="p-3">
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container-fluid">
            <span class="navbar-brand">ProGamer Computing</span>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li>
                        <a class="nav-link active" href="/Home/">Home</a>
                    </li>

                    <!-- ABOUT LINK -->

                    <li>
                        <a class="nav-link" href="/Home/About/">About</a>
                    </li>
                </ul>

                <!-- SEARCH BAR -->

                <form action="">
                    <input class="searchbar" type="text" placeholder="Enter your search here...">
                    <button type="submit" class="search-button">
                        <img src="~/defaultimages/magnifyingGlass.png">
                    </button>
                </form>

            </div>
        </div>
    </nav>
</header>
<!-- HEADER END-->
<br />
<!-- GAP BETWEEN HEADER & BODY -->

<div class="welcomeBar">
    <p>Hello, <b>Mickey Mouse</b></p>
    <a href="">Continue Shopping</a>
    <p>|</p>
    <a href="">Logout</a>
</div>

<body>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!--End Body Section-->



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>

<!--Footer-->
<footer class="border-top footer text-muted bg-light">
    <div class="footer_container">
        &copy; 2021 - ProGamer Computing
        <a class="contactUs" href="/">Contact Us</a>
    </div>
</footer>
<!--END FOOTER-->